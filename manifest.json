{
	// 必须的字段
	"name": "工作助手",
	"version": "1.0.0",
	"manifest_version": 2,

	"browser_action": {
		"default_icon": "icons/icon.png",
		// 图标悬停时的标题，可选
		"default_title": "工作助手"
		 ,"default_popup": "popup.html"
	},
	"permissions": [
		"tabs", "activeTab", "notifications", "background","http://os.cntytz.com/","https://os.cntytz.com/"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"icons": {
		"128": "icons/128.png",
		"48": "icons/48.png",
		"32": "icons/16.png",
		"16": "icons/16.png"
	},
	"content_scripts": [{
			"matches": ["https://os.cntytz.com/*"],
			"css": ["rebuild/ele/index.css","rebuild/css/layout.css","rebuild/css/mystyle.css"],
			"js": [
				//加密解密
				"rebuild/js/jsencrypt.min.js",
				//缓存插件
				"rebuild/js/cache.js",
				//工具箱
				"rebuild/js/tool.js",

				//vue插件
				"rebuild/js/vue.global.js",
				"rebuild/js/vuex.global.js",
				"rebuild/js/vue-router.js",
				//页面
				"rebuild/view/Login.js",
				"rebuild/view/Note.js",
				"rebuild/view/View.js",
				"rebuild/view/Write.js",
				//路由
				"rebuild/view/router.js",
				//element插件
				"rebuild/ele/index.full.js",
				//数据请求
				"rebuild/js/request.js",
				//主脚本
				"rebuild/myscript.js"
			],
			"run_at": "document_end"
		}
	]
}
